<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RSI</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        :root {
            --primary-color: rgb(59, 145, 174);
            --tertiary-color: rgb(30, 80, 131);
            --accent-color: rgb(50, 121, 170);
            --dark-color: rgb(69, 102, 137);
            --highlight-color: rgb(255, 150, 55);
            --light-text: #f8f9fa;
        }

        .navbar {
            background-color: var(--accent-color) !important;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
            padding: 15px;
            width: 100vw;
        }

        .navbar-brand,
        .nav-link {
            color: white !important;
            font-weight: bold;
        }

        .nav-link:hover {
            color: var(--highlight-color) !important;
        }

        .navbar-toggler {
            border: none;
        }

        .footer {
            background-color: var(--dark-color);
            color: white;
            padding: 15px 0;
            text-align: center;
            margin-top: 40px;
            border-top: 3px solid var(--highlight-color);
            width: 100vw;
        }

        .footer a {
            color: var(--highlight-color);
            text-decoration: none;
            font-weight: bold;
        }

        .footer a:hover {
            color: var(--secondary-color);
        }
    </style>

</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="MeetingRoomHome">
                    <img src="/images/rsiLogo.jpg" alt="RSI Logo" style="width:400px"/>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="MeetingRoomHome">Room
                                List</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="BookMeetingRoom">Book</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer">
        <div class="container">
            <p> RSI Intranet</p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
